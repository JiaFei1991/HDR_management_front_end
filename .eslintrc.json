{
  "extends": ["prettier"],
  "parser": "babel-eslint",
  "rules": {
    "spaced-comment": "off",
    // TODO: turn this back on before going into prod to remove all console log
    "no-console": "off",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["warn", { "object": true, "array": false }],
    "no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "req|res|next|val|index|state|action" }
    ],
    "comma-dangle": ["warn", "never"],
    "no-unneeded-ternary": ["warn", { "defaultAssignment": true }]
  }
}
